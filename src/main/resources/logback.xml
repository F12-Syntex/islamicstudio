<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern format:
                 %d    = date/time
                 %-5level = log level padded (INFO, DEBUG, ERROR, etc.)
                 [%thread] = thread name
                 %logger{36} = logger name (shortened to 36 chars)
                 %msg   = the actual log message
                 %n     = new line -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger (default) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Example: make your own package more verbose -->
    <logger name="com.syntex.islamicstudio" level="DEBUG"/>

    <!-- Example: silence noisy libraries -->
    <logger name="org.reflections" level="WARN"/>
    <logger name="org.xerial" level="WARN"/>

</configuration>